rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Los usuarios solo pueden leer y escribir en su propio documento en la colección 'users'.
    match /users/{userId} {
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null;
    }

    // El ranking es público, cualquiera puede leerlo.
    match /publicProfiles/{userId} {
      allow read: if true;
      // Los usuarios solo pueden crear, actualizar o eliminar su propio perfil público.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
